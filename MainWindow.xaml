<Window x:Class="Chess.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chess"
        mc:Ignorable="d"
        Title="MainWindow" Height="1030" Width="900">

    <Grid>
        <Grid HorizontalAlignment="Center"  Margin="0,70,0,0" VerticalAlignment="Top" Width="800" Height="800" x:Name="board"/>
        <Button Content="Reset" Margin="250,25,0,0" VerticalAlignment="Top" x:Name="Reset" Height="25" Click="Reset_Click" HorizontalAlignment="Left" Width="100"/>
        <Label Content="Player" Margin="355,25,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" HorizontalContentAlignment="Center" Height="25" Background="White" Foreground="Black" x:Name="Player"/>
        <Label Content="" HorizontalAlignment="Left" Height="60" Margin="50,10,0,0" VerticalAlignment="Top" Width="186" x:Name="Debug"/>
        <Grid HorizontalAlignment="Center" Height="90" Margin="0,875,0,0" VerticalAlignment="Top" Width="800" x:Name="promo" Visibility="Collapsed">
            <Button  HorizontalAlignment="Left" VerticalAlignment="Center" Height="90" Width="90" x:Name="Queen" Click="Promo_Click"/>
            <Button  HorizontalAlignment="Left" VerticalAlignment="Center" Height="90" Width="90" Margin="180,0,0,0" x:Name="Rook"  Click="Promo_Click"/>
            <Button  HorizontalAlignment="Right" VerticalAlignment="Center" Height="90" Width="90" x:Name="Knight"  Click="Promo_Click"/>
            <Button  VerticalAlignment="Center" Height="90" Margin="530,0,180,0" x:Name="Bishop"  Click="Promo_Click"/>
        </Grid>
        <Button Content="Save" Margin="0,26,328,0" VerticalAlignment="Top" Height="24" HorizontalAlignment="Right" Width="100" x:Name="save" Click="Save_Click"/>
        <Button Content="Load" HorizontalAlignment="Left" Margin="577,26,0,0" VerticalAlignment="Top" Height="24" Width="100" x:Name="load" Click="Load_Click"/>
    </Grid>
</Window>
